<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false">

    <include resource="org/springframework/boot/logging/logback/defaults.xml" />

    <property name="HOME_LOG" value="logs/checklist-bot" />

    <springProfile name="dev">

        <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %highlight(%-5level) %magenta([%thread]) %cyan(%logger{0}.%M) - %msg%n</pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="console" />
        </root>

        <logger name="com.jardvcode" level="DEBUG" />

    </springProfile>

    <springProfile name="qa,prod">

        <appender name="APPLICATION" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${HOME_LOG}/application.log</file>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{0} - %msg%n</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${HOME_LOG}/archived/application.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <totalSizeCap>1GB</totalSizeCap>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
        </appender>

        <appender name="CHECKLIST" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${HOME_LOG}/checklist.log</file>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{0} - %msg%n</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${HOME_LOG}/archived/checklist.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <totalSizeCap>1GB</totalSizeCap>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
        </appender>

        <logger name="com.jardvcode.bot.checklist" level="INFO" additivity="false">
            <appender-ref ref="CHECKLIST" />
        </logger>

        <root level="INFO">
            <appender-ref ref="APPLICATION" />
        </root>

    </springProfile>

</configuration>